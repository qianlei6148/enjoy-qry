{
	"bsonType": "object",
	"permission": {
		"create": false,
		"delete": false,
		"read": true,
		"update": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（音乐 ID），系统自动生成"
		},
		"add_date": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		},
		"album_id": {
			"bsonType": "string",
			"description": "专辑名称 id，参考`music-album`表",
			"foreignKey": "music-album._id"
		},
		"song_name": {
			"bsonType": "string",
			"description": "歌曲名",
			"title": "歌曲名",
			"trim": "both"
		},
		"song_cover": {
			"bsonType": "string",
			"description": "歌曲封面",
			"title": "歌曲封面"
		},
		"song": {
			"bsonType": "string",
			"description": "歌曲",
			"title": "歌曲",
			"format": "url",
			"pattern": "^(http:\/\/|https:\/\/|\/|.\/|@\/)\\S",
			"trim": "both"
		},
		"time": {
			"bsonType": "timestamp",
			"description": "歌曲时长",
			"title": "歌曲时长"
		},
		"singer": {
			"bsonType": "string",
			"description": "歌手",
			"title": "歌手",
			"trim": "both"
		},
		"introduction": {
			"bsonType": "string",
			"description": "歌曲简介",
			"title": "歌曲简介",
			"label": "歌曲简介"
		},
		"lyric": {
			"bsonType": "string",
			"description": "歌词",
			"title": "歌词",
			"label": "歌词"
		},
		"sort": {
			"bsonType": "int",
			"description": "顺序，由小到大",
			"title": "显示顺序"
		}
	},
	"required": ["album_id", "song_name", "song", "singer", "lyric"]
}
